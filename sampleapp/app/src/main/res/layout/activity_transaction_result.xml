<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="net.authorize.sampleapplication.TransactionResultActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/transaction_successful_card"
            android:layout_gravity="center"
            android:visibility="visible"
            android:background="@color/White"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_summary_title"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/White"
                        android:background="@color/ThemeColor"
                        android:paddingLeft="@dimen/card_field_padding"
                        android:paddingTop="20dp"
                        android:paddingRight="@dimen/card_field_padding"
                        android:paddingBottom="30dp"/>
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header"
                        android:src="@drawable/ic_done_black_24dp"
                        android:layout_gravity="end"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        app:fabSize="mini"
                        app:elevation="0dp"
                        android:tint="@color/White"
                        android:layout_marginTop="-21dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        app:borderWidth="0dp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    style="@style/Receipt_Field_Layout">
                    <TextView
                        android:id="@+id/transaction_id_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/receipt_transaction_id_text"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/transaction_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    style="@style/Receipt_Field_Layout">
                    <TextView
                        android:id="@+id/transaction_date_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/receipt_date_text"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/transaction_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
                <TextView
                    style="@style/Line"/>
                <LinearLayout
                    style="@style/Receipt_Field_Layout"
                    android:layout_marginTop="@dimen/card_field_padding">
                    <TextView
                        android:id="@+id/transaction_card_type_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/receipt_card_type_text"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/transaction_card_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    style="@style/Receipt_Field_Layout">
                    <TextView
                        android:id="@+id/transaction_card_number_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/receipt_card_number_text"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/transaction_card_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
                <TextView
                   style="@style/Line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp">
                    <TextView
                        android:id="@+id/transaction_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/receipt_transaction_total" />
                    <TextView
                        android:id="@+id/transaction_amount"
                        android:layout_width="wrap_content"
                        android:textSize="25sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/transaction_successful_card">
            <Button
                android:id="@+id/history_page_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/payment_history_button"
                android:textColor="@color/Accent" />
            <Button
                android:id="@+id/make_new_transaction_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Accent"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/new_transaction_button"
                android:textColor="@color/White" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/icon_padding">
            <ImageView
                android:id="@+id/desktop_icon"
                android:contentDescription="@string/desktop_icon"
                style="@style/Slogan_Icon"
                android:tint="@color/Grey"
                android:src="@drawable/ic_desktop_mac_black_24dp"/>
            <ImageView
                android:id="@+id/tablet_icon"
                android:contentDescription="@string/mobile_icon"
                style="@style/Slogan_Icon"
                android:tint="@color/Grey"
                android:src="@drawable/ic_tablet_mac_black_24dp" />
            <ImageView
                android:id="@+id/shop_icon"
                android:contentDescription="@string/store_icon"
                style="@style/Slogan_Icon"
                android:tint="@color/Grey"
                android:src="@drawable/ic_store_mall_directory_black_24dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:textColor="@color/Grey"
            android:layout_below="@id/icons"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
